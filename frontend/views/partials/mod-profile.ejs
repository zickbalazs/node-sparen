<main class="d-flex flex-column">
    <% if (message!=undefined) { %>
        <%- include('../partials/message') %>
    <% } %>
    <form action="/api/users/mod-profile" method="post" class="col-lg-4 col-md-9 bg-light p-3 border border-dark rounded m-auto">
        <h2 class="mt-3 text-center">Profile Modification</h2>
        <hr>
        <div class="mb-3">
            <label for="email" class="form-label">E-mail Address:</label>
            <input type="email" name="email" class="form-control" value="<%=user.email%>">
        </div>
        <div class="mb-5">
            <label for="name" class="form-label">Username:</label>
            <input type="text" name="name" class="form-control" value="<%=user.name%>">
        </div>
        <div class="mb-3">
            <input type="submit" value="Modify" class="btn btn-success ml-3">
        </div>
    </form>
</main>